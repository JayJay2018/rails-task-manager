<div class="grey-wrapper">
  <div class="container text-center">
    <h1><%=  @task.title %></h1>
    <div>
    <p><%= @task.details %></p>
    </div>
    <%= link_to("Edit task", edit_task_path(@task.id), :class => 'btn btn-primary btn-xs')%>
    <%= label_tag :completed, @task.completed ? "Completed" : "Not completed" %>
    <%= check_box_tag :completed, nil, @task.completed, disabled: true %>
    <br>
    <br>
    <br>
    <%= link_to("Back to list", tasks_path, :class => 'btn btn-success')%>
  </div>
</div>
